<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="378.0" prefWidth="273.0" style="-fx-background-radius: 20; -fx-background-color: #001423;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QuizWidgetController">
   <children>
      <VBox layoutY="8.0" prefHeight="359.0" prefWidth="154.0">
         <children>
            <VBox prefHeight="157.0" prefWidth="253.0">
               <children>
                  <ImageView fx:id="quizCover" fitHeight="210.0" fitWidth="253.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox fx:id="text" prefHeight="132.0" prefWidth="233.0">
               <children>
                  <Label fx:id="quizName" text="Quiz Name" textFill="#f1faee">
                     <font>
                        <Font size="31.0" />
                     </font>
                  </Label>
                  <Label fx:id="quizDescription" prefHeight="26.0" prefWidth="239.0" text="Description" textFill="#f1faee">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="numberOfQuestions" prefHeight="20.0" prefWidth="197.0" text="Number Of Questions" textFill="#f1faee">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Button fx:id="playNow" mnemonicParsing="false" onAction="#playQuizNow" style="-fx-background-color: #f1faee; -fx-background-radius: 20;" text="Play Now" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
